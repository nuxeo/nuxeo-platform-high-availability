<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.queue">

  <service>
    <provide interface="org.nuxeo.ecm.platform.queue.api.QueueHandler" />
    <provide interface="org.nuxeo.ecm.platform.queue.api.QueueRegistry" />
    <provide interface="org.nuxeo.ecm.platform.queue.api.QueueLocator" />
  </service>

  <require>org.nuxeo.ecm.platform.lock</require>
  <require>org.nuxeo.ecm.platform.heartbeat</require>
  
  <documentation>
    Lock service framework
    @author
    <a href="mailto:stan@nuxeo.com">Sun Seng David TAN</a>
  </documentation>

  <implementation class="org.nuxeo.ecm.platform.queue.core.QueueComponent" />

  <extension-point name="queues">
    <documentation>
      @author Sun Seng David TAN
      for a queue, provide which kind of persister and
      which kind of executor to be used.
      <code>
        <extension target="org.nuxeo.ecm.platform.queue" point="queue">
          <queue type="org.nuxeo.ecm.platform.queue.core.FakeContent" 
                manager="org.nuxeo.ecm.platform.queue.core.FakeExecutor"
                persister="org.nuxeo.ecm.platform.queue.core.DocumentQueuePersister" />
        </extension>
      </code>
    </documentation>

    <object class="org.nuxeo.ecm.platform.queue.core.QueueDescriptor" />
  </extension-point>
  
  <extension target="org.nuxeo.ecm.core.management.CoreManagementComponent" point="storageHandlers">
    <handler id="queue" class="org.nuxeo.ecm.platform.queue.core.QueuesInitializationHandler"/>
  </extension>

</component>